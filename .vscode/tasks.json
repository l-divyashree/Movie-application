{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Movie Booking Application (Full Stack)",
			"type": "shell",
			"command": "docker-compose up -d",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Stop Movie Booking Application",
			"type": "shell",
			"command": "docker-compose down",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Build Backend (Maven)",
			"type": "shell",
			"command": "mvn clean compile",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Test Backend (Maven)",
			"type": "shell",
			"command": "mvn test",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run Backend (Spring Boot)",
			"type": "shell",
			"command": "mvn spring-boot:run",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm install",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": ["$node-sass"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Start Frontend (React Dev Server)",
			"type": "shell",
			"command": "npm start",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": ["$node-sass"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "Build Frontend (Production)",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": ["$node-sass"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Test Frontend (Jest)",
			"type": "shell",
			"command": "npm test",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": ["$node-sass"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Setup Database (MySQL)",
			"type": "shell",
			"command": "docker run --name moviebooking-mysql -e MYSQL_ROOT_PASSWORD=rootpassword -e MYSQL_DATABASE=moviebooking -e MYSQL_USER=movieuser -e MYSQL_PASSWORD=moviepassword -p 3306:3306 -d mysql:8.0",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "View Application Logs",
			"type": "shell",
			"command": "docker-compose logs -f",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		}
	]
}